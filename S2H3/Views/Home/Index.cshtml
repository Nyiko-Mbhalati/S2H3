@model S2H3.Models.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<main>
    <div class="container">
        <h1>Bike Store Dashboard</h1>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <!-- Staff Section -->
        <div class="section">
            <h2>Staff</h2>
            @Html.Partial("_Staff", Model.StaffList)
        </div>

        <!-- Customers Section -->
        <div class="section">
            <h2>Customers</h2>
            @Html.Partial("_Customer", Model.CustomerList)
        </div>

        <!-- Products Section -->
        <div class="section">
            <h2>Products</h2>
            @Html.Partial("_Product", Model)
        </div>
    </div>
</main>